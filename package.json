  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hmake98/fastify-typescript/issues"
  },
  "homepage": "https://github.com/hmake98/fastify-typescript#readme",
  "dependencies": {
    "@prisma/client": "^2.17.0",
    "@types/bcryptjs": "^2.4.2",
    "aws-sdk": "^2.828.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "env-schema": "^3.0.0",
    "fastify": "^3.10.1",
    "fastify-auth": "^1.0.1",
    "fastify-autoload": "^3.0.2",
    "fastify-cli": "^2.7.0",
    "fastify-cors": "^5.1.0",
    "fastify-file-upload": "^3.0.0",
    "fastify-formbody": "^5.0.0",
    "fastify-helmet": "^5.1.0",
    "fastify-jwt": "^2.3.0",
    "fastify-multipart": "^4.0.0",
    "fastify-now": "^2.3.0",
    "fastify-plugin": "^3.0.0",
    "fluent-json-schema": "^2.0.3",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "pino": "^6.11.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.14.0",
    "@types/eslint": "7.2.6",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/http-errors": "1.8.0",
    "@types/jest": "26.0.20",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "14.14.41",
    "@types/nodemon": "1.19.0",
    "@types/pino": "6.3.5",
    "@types/prettier": "2.1.6",
    "@typescript-eslint/eslint-plugin": "3.10.1",
